@model SisCor.ViewModels.OperadoraViewModel
    
@{
    ViewData["Title"] = "Create";
}

<h2>Operadora</h2>

<h4>Cadastrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Nome da operadora</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RazaoSocial" class="control-label">Razão Social</label>
                <input asp-for="RazaoSocial" class="form-control" />
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fantasia" class="control-label">Nome Fantasia</label>
                <input asp-for="Fantasia" class="form-control" />
                <span asp-validation-for="Fantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label">CNPJ</label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IE" class="control-label">Inscrição Estadual</label>
                <input asp-for="IE" class="form-control" />
                <span asp-validation-for="IE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IM" class="control-label">Inscrição Municipal</label>
                <input asp-for="IM" class="form-control" />
                <span asp-validation-for="IM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RamoAtividade" class="control-label">Ramo de Atividade</label>
                <input asp-for="RamoAtividade" class="form-control" />
                <span asp-validation-for="RamoAtividade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label">Endereço</label>
                <input asp-for="Logradouro" class="form-control" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label">Numero</label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label">Bairro</label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CEP" class="control-label">CEP</label>
                <input asp-for="CEP" class="form-control" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IdEstado" class="control-label">Estado</label>
                <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.IdEstado"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label">Ativo</label>
                <select asp-for="Ativo" class="form-control" ><option>{ Text = "Yes",   Value=true.ToString(), Selected = false }</option></select>
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>
            @*<div class="form-group" hidden>
                <label asp-for="IdPessoa" class="control-label"></label>
                <select asp-for="IdPessoa" class ="form-control" asp-items="ViewBag.IdPessoa"></select>
            </div>*@
            </div>

            <div class="form-group" hidden>
                <label asp-for="IdParceiroTipo" class="control-label"></label>
                <select asp-for="IdParceiroTipo" class ="form-control" asp-items="ViewBag.IdParceiroTipo"><option value="1" selected></option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

